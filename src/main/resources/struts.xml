<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="true" />
	<constant name="struts.custom.i18n.resources" value="global" />
	<constant name="struts.convention.result.path" value="/WEB-INF/content/" />
	<package name="default" extends="struts-default" namespace="/">
		<interceptors>
			<interceptor name="loginInterceptor" class="com.ooad.project.class_scheduler.LoginInterceptor">
			</interceptor>
			<interceptor-stack name="loginStack">
				<interceptor-ref name="loginInterceptor"></interceptor-ref>
				<interceptor-ref name="defaultStack"></interceptor-ref>
			</interceptor-stack>
			<interceptor name="userInterceptor" class="com.ooad.project.class_scheduler.UserInterceptor">
			</interceptor>
			<interceptor-stack name="userStack">
				<interceptor-ref name="userInterceptor"></interceptor-ref>
				<interceptor-ref name="defaultStack"></interceptor-ref>
			</interceptor-stack>
		</interceptors>
		<global-results>
		 	<result name="login" type="redirect">login</result>
		 	<result name="home" type="redirect">home</result>
		</global-results>
		<action name="index">
			<result type="redirect">/index.jsp</result>
		</action>
        <action name="login">
        	<interceptor-ref name="userStack"></interceptor-ref>
        	<result>/content/login.jsp</result>
        </action>
        <action name="home" class="com.ooad.project.class_scheduler.action.HomeAction">
        	<interceptor-ref name="loginStack"></interceptor-ref>
        	<result>/content/home.jsp</result>
        </action>
        <action name="register">
        	<interceptor-ref name="userStack"></interceptor-ref>
        	<result>/content/register.jsp</result>
        </action>
        <action name="Login" class="com.ooad.project.class_scheduler.action.LoginAction">
            <result name="success" type="redirect">home</result>
            <result name="input">/content/login.jsp</result>
            <result name="error">/content/login.jsp</result>
        </action>
        <action name="Register" class="com.ooad.project.class_scheduler.action.RegisterAction">
            <result name="success">/content/login.jsp</result>
            <result name="input">/content/register.jsp</result>
            <result name="error">/content/register.jsp</result>
        </action>
        <action name="Logout" class="com.ooad.project.class_scheduler.action.LogoutAction">
            <result name="success">/content/login.jsp</result>
        </action>
    </package>
</struts>
