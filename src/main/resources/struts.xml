<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="true" />
	<constant name="struts.custom.i18n.resources" value="global" />
	<constant name="struts.convention.result.path" value="/WEB-INF/content/" />
	<package name="default" extends="struts-default" namespace="/">
		<action name="index">
			<result>/index.jsp</result>
		</action>
        <action name="login">
        	<result>/content/login.jsp</result>
        </action>
        <action name="home">
        	<result>/content/home.jsp</result>
        </action>
        <action name="register">
        	<result>/content/register.jsp</result>
        </action>
        <action name="Login" class="com.ooad.project.class_scheduler.action.LoginAction">
            <result name="success" type="redirect">home</result>
            <result name="input">/content/login.jsp</result>
            <result name="error">/content/login.jsp</result>
        </action>
        <action name="Register" class="com.ooad.project.class_scheduler.action.RegisterAction">
            <result name="success" type="redirect">login</result>
            <result name="input">/content/register.jsp</result>
            <result name="error">/content/register.jsp</result>
        </action>
        <action name="Logout" class="com.ooad.project.class_scheduler.action.LogoutAction">
            <result name="success" type="redirect">login</result>
        </action>
    </package>
</struts>
